generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DeviceMeasurementsRaw {
  id            Int      @default(autoincrement()) @id
  device_id     String      
  timestamp     DateTime
  active_energy Int
  active_power  Int
}

model DeviceMeasurementsHour {
  id            Int      @default(autoincrement()) @id
  device_id     String      
  timestamp     DateTime
  active_energy Int
  active_power  Int
}

model DeviceMeasurementsDay {
  id            Int      @default(autoincrement()) @id
  device_id     String      
  timestamp     DateTime
  active_energy Int
  active_power  Int
}
